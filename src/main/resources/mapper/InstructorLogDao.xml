<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.herocheer.instructor.dao.InstructorLogDao">
    
    <sql id="table_field">
      id, instructorId, auditState, auditIdea, remarks, createdId, createdBy, createdTime, updateId, updateBy, updateTime      
    </sql>
    
    <!--单表新增-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true" parameterType="com.herocheer.instructor.domain.entity.InstructorLog">
        insert into instructor_log (
    <trim suffixOverrides=",">
        <if test="instructorId != null">
            instructorId,
        </if>
        <if test="auditState != null">
            auditState,
        </if>
        <if test="auditIdea != null">
            auditIdea,
        </if>
        <if test="remarks != null">
            remarks,
        </if>
        <include refid="com.herocheer.mybatis.base.dao.CommonDao.inscolumn"/>
    </trim>
    ) VALUES (
    <trim suffixOverrides=",">
        <if test="instructorId != null">
            #{instructorId},
        </if>
        <if test="auditState != null">
            #{auditState},
        </if>
        <if test="auditIdea != null">
            #{auditIdea},
        </if>
        <if test="remarks != null">
            #{remarks},
        </if>
	    <include refid="com.herocheer.mybatis.base.dao.CommonDao.insparam"/>
    </trim>
    )
    </insert>
    
    <!--通过主键删除-->
    <delete id="delete" parameterType="long">
        delete from instructor_log where id = #{id}
    </delete>
    
    <!--通过主键修改数据-->
    <update id="update" parameterType="com.herocheer.instructor.domain.entity.InstructorLog">
        update instructor_log
        <set>
            <if test="instructorId != null">
                instructorId = #{instructorId},
            </if>
            <if test="auditState != null">
                auditState = #{auditState},
            </if>
            <if test="auditIdea != null">
                auditIdea = #{auditIdea},
            </if>
            <if test="remarks != null">
                remarks = #{remarks},
            </if>
		    <include refid="com.herocheer.mybatis.base.dao.CommonDao.update"/>
        </set>
        where id = #{id}
    </update>
       
    <!--主键id单表查询-->
    <select id="get" parameterType="java.lang.Long" resultType="com.herocheer.instructor.domain.entity.InstructorLog">
        select <include refid="table_field"/> from instructor_log where id = #{id}
    </select>
    
    
    
    <!--查询指定行数据-->
    <select id="findByLimit" parameterType="map" resultType="com.herocheer.instructor.domain.entity.InstructorLog">
        select <include refid="table_field"/> from instructor_log
        <where>
            <if test="instructorId != null">
                and instructorId = #{instructorId}
            </if>
            <if test="auditState != null">
                and auditState = #{auditState}
            </if>
            <if test="auditIdea != null">
                and auditIdea = #{auditIdea}
            </if>
            <if test="remarks != null">
                and remarks = #{remarks}
            </if>
		    <include refid="com.herocheer.mybatis.base.dao.CommonDao.condition"/>
        </where>
    </select>
</mapper>