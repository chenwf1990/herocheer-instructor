<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.herocheer.instructor.dao.SysMenuDao">

    <sql id="table_field">
      id, pid, menuName, code, url, orderNo, icon, remark, status, createdId, createdBy, createdTime, updateId, updateBy, updateTime      
    </sql>

    <!--单表新增-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true"
            parameterType="com.herocheer.instructor.domain.entity.SysMenu">
        insert into sys_menu (
        <trim suffixOverrides=",">
            <if test="pid != null">
                pid,
            </if>
            <if test="menuName != null">
                menuName,
            </if>
            <if test="code != null">
                code,
            </if>
            <if test="url != null">
                url,
            </if>
            <if test="orderNo != null">
                orderNo,
            </if>
            <if test="icon != null">
                icon,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="status != null">
                status,
            </if>
            <include refid="com.herocheer.mybatis.base.dao.CommonDao.inscolumn"/>
        </trim>
        ) VALUES (
        <trim suffixOverrides=",">
            <if test="pid != null">
                #{pid},
            </if>
            <if test="menuName != null">
                #{menuName},
            </if>
            <if test="code != null">
                #{code},
            </if>
            <if test="url != null">
                #{url},
            </if>
            <if test="orderNo != null">
                #{orderNo},
            </if>
            <if test="icon != null">
                #{icon},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <include refid="com.herocheer.mybatis.base.dao.CommonDao.insparam"/>
        </trim>
        )
    </insert>

    <!--通过主键删除-->
    <delete id="delete" parameterType="long">
        delete from sys_menu where id = #{id}
    </delete>

    <!--通过主键修改数据-->
    <update id="update" parameterType="com.herocheer.instructor.domain.entity.SysMenu">
        update sys_menu
        <set>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="menuName != null">
                menuName = #{menuName},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="orderNo != null">
                orderNo = #{orderNo},
            </if>
            <if test="icon != null">
                icon = #{icon},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <include refid="com.herocheer.mybatis.base.dao.CommonDao.update"/>
        </set>
        where id = #{id}
    </update>

    <!--主键id单表查询-->
    <select id="get" parameterType="java.lang.Long" resultType="com.herocheer.instructor.domain.entity.SysMenu">
        select
        <include refid="table_field"/>
        from sys_menu where `status`= 1 and id = #{id}
    </select>


    <!--查询指定行数据-->
    <select id="findByLimit" parameterType="map" resultType="com.herocheer.instructor.domain.entity.SysMenu">
        select
        <include refid="table_field"/>
        from sys_menu
        <where>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="menuName != null">
                and menuName = #{menuName}
            </if>
            <if test="code != null">
                and code = #{code}
            </if>
            <if test="url != null">
                and url = #{url}
            </if>
            <if test="orderNo != null">
                and orderNo = #{orderNo}
            </if>
            <if test="icon != null">
                and icon = #{icon}
            </if>
            <if test="remark != null">
                and remark = #{remark}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <include refid="com.herocheer.mybatis.base.dao.CommonDao.condition"/>
        </where>
    </select>


    <!--查找用户的菜单权限-->
    <select id="selectMenuTreeToUser" parameterType="map" resultType="com.herocheer.instructor.domain.vo.OptionTreeVO">
        select id,pid,menuName as `name` from sys_menu where  status = false
        union all
        select id,pid,operationName as `name` from sys_operation where  status = false
    </select>

    <!--根据用户角色获取权限-->
    <select id="selectMenuTreeToRole" parameterType="map" resultType="com.herocheer.instructor.domain.entity.SysMenu">
        select distinct e.*  from `user` a
        inner join sys_user_role b on a.id = b.userId
        inner join sys_role c on b.roleId = c.id
        inner join sys_role_menu d on c.id = d.roleId
        inner join sys_menu e on e.id =  d.menuId
        <where>
            <trim prefixOverrides="AND | OR">
                <if test="userId != null">
                    and a.id = #{userId}
                </if>
                <if test="roleArray != null">
                    and d.roleId in <foreach collection="roleArray" item="item" index="index" open="(" close=")" separator=","> '${item}' </foreach>
                </if>
                <if test="status != null">
                    and a.status = #{status}
                </if>
            </trim>
        </where>
    </select>

    <!--后台菜单列表-->
    <select id="selectMenuByPage" parameterType="com.herocheer.instructor.domain.vo.SysMenuVO" resultType="com.herocheer.instructor.domain.entity.SysMenu">
        select <include refid="table_field"/> from sys_menu
        <where>
            <trim prefixOverrides="AND | OR">
                <if test="menuName != null">
                    and menuName = #{menuName}
                </if>
                <if test="beginTime != null">
                    and createdTime >= #{beginTime}
                </if>
                <if test="endTime != null">
                    and createdTime &lt;= #{endTime}
                </if>
                <if test="status != null">
                    and status = #{status}
                </if>
            </trim>
        </where>
        order by id desc
    </select>

    <!--选中的菜单节点-->
    <select id="selectedMenuNode" parameterType="Long" resultType="String">
        SELECT menuId FROM sys_role_menu
        <where>
            <trim prefixOverrides="AND | OR">
                <if test="roleId != null">
                    and roleId = #{roleId}
                </if>
            </trim>
        </where>
    </select>
</mapper>