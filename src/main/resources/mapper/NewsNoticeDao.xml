    <select id="queryPageList" parameterType="com.herocheer.instructor.domain.vo.NewsQueryVo" resultType="com.herocheer.instructor.domain.entity.NewsNotice">
        select <include refid="table_field"/> from news_notice
        <where>
            <if test="type != null">
