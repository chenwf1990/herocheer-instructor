<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.herocheer.instructor.dao.TestDao">
    <select id="get" parameterType="java.lang.Long" resultType="com.herocheer.instructor.domain.Test">
        select * from test where id = #{id}
    </select>
    <select id="findOne" parameterType="java.lang.Long" resultType="com.herocheer.instructor.domain.Test">
        select * from test where id = #{id}
    </select>

     <update id="update" parameterType="com.herocheer.instructor.domain.Test">
      update test
      <trim prefix="SET" suffixOverrides=",">
          <if test="remarks != null">
           remarks = #{remarks},
          </if>
          <include refid="com.herocheer.mybatis.base.dao.CommonDao.update"></include>
      </trim>
      where id = #{id}
  </update>

   <insert id="insert" parameterType="com.herocheer.instructor.domain.Test">
  insert into test (
  <trim suffixOverrides=",">
  <if test="remarks != null">
  remarks,
  </if>
   <include refid="com.herocheer.mybatis.base.dao.CommonDao.inscolumn"></include>
  </trim>
  ) values (
  <trim suffixOverrides=",">
      <if test="remarks != null">
      #{remarks},
      </if>
        <include refid="com.herocheer.mybatis.base.dao.CommonDao.insparam"></include>
    </trim>
  )
</insert>

    <select id="findByLimit" parameterType="map" resultType="com.herocheer.instructor.domain.Test">
        select * from test
        <where>
          <include refid="com.herocheer.mybatis.base.dao.CommonDao.condition"/>
        </where>
    </select>

    <delete id="delete" parameterType="long">
    delete from test where id = #{id}
</delete>
</mapper>