    <select id="queryList" resultType="com.herocheer.instructor.domain.vo.CourseInfoVo"
            parameterType="com.herocheer.instructor.domain.vo.CourseInfoQueryVo">
        SELECT i.*,CASE
            WHEN i.`state` = 1 AND courseEndTime+24*60*60*1000-1 <![CDATA[ < ]]> UNIX_TIMESTAMP(NOW())*1000 THEN 2
            ELSE r.`status` END AS 'reservationStatus'
        from course_info i LEFT JOIN course_reservation r on i.id=r.courseId
        <where>
            i.`state` = 1
            <if test="createdId!=null">
                and r.userId=#{createdId}
            </if>
            <if test="reservationState!=null and reservationState==1">
                and r.`status`=0
            </if>
            <if test="reservationState!=null and reservationState==2">
                and (r.`status`=1 or courseEndTime+24*60*60*1000-1 <![CDATA[ < ]]> UNIX_TIMESTAMP(NOW())*1000)
            </if>
            order by r.createdTime desc
        </where>
    </select>
